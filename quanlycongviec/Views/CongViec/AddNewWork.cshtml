@model quanlycongviec.Models.congviec

@{
    ViewBag.Title = "AddNewWork";
    quanlycongviec.Models.quanlycongviecEntities db = new quanlycongviec.Models.quanlycongviecEntities();
   
}

<h2>AddNewWork</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thêm mới công việc</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group ">
    <label class = "control-label col-md-2">Tên công việc</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.workname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.workname, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label class = "control-label col-md-2">Ngày bắt đầu</label>

    <div class="col-md-10">
        @Html.EditorFor(model => model.startday, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.startday, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label class = "control-label col-md-2">Ngày kết thúc</label>

    <div class="col-md-10">
        @Html.EditorFor(model => model.endday, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.endday, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <label class = "control-label col-md-2">Tên nhân viên</label>
        <div class="col-md-10">
            <select class="form-control" name="nhanvien_name">
                @foreach (var item2 in db.nhanviens.ToList())
                {
                    <option value="@item2.id">@item2.name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
