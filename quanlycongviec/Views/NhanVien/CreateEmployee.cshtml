@model quanlycongviec.Models.nhanvien

@{
    ViewBag.Title = "CreateEmployee";
    quanlycongviec.Models.quanlycongviecEntities db = new quanlycongviec.Models.quanlycongviecEntities();

}

<h2>Thêm mới nhân viên</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <label class="control-label col-md-2">Tên nhân viên</label>

    <div class="col-md-10">
        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
    </div>
</div>

   
    <div class="form-group">
        <label class="control-label col-md-2">Chức danh</label>
        <div class="col-md-10">
            <select class="form-control" name="nhanvien_name">
                <option></option>
                @foreach (var item in db.vitris.ToList())
                {
                    <option value="@item.id">@item.titlename</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
